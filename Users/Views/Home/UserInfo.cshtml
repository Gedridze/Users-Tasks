
@{ 
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.3.1.min.js"></script>
    <script src="~/script.js"></script>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <link type="text/css" href="~/style.css" , rel="stylesheet" />

</head>
<body>
    
    <div id="body">
        <div id="info">
            <h1 id="UserInfo"></h1>
        </div><br />

        <table class="table">
            <thead>
                <tr>
                    <td>Task Name</td>
                    <td>Task Status</td>
                    <td>Actions</td>
                </tr>
            </thead>
        </table>

        <form id="Form" method="post" , action="/home/userinfo/@ViewBag.Id" onsubmit="createTask()">
            <input type="hidden" id="user_id" value="@ViewBag.Id"/>
            <label for="name">Task Name:</label>
            <input type="text" name="name" id="task_name" />
            <label for="isCompleted">Completed: </label>
            <input type="checkbox" name="isCompleted" value="completed" id="status" />
            <button type="submit">Add</button>
        </form>

        <a href="/Home/"><< Back</a>
    </div>
    <script>$(document).ready(showUserInfo(@ViewBag.Id));</script>
</body>
</html>
